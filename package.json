{
  "name": "search-filter",
  "displayName": "Search filter Comments String",
  "description": "Search Filter in Comment,String 可以在注释，字符串中查找内容",
  "version": "0.0.1",
  "publisher": "AustinYoung",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:searchFilter.inComments",
    "onCommand:searchFilter.notInComments"
  ],
  "repository": {
    "url": "https://gitee.com/pattazl/search-filter"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "searchFilter.doFilter",
        "enablement": "editorLangId == search-result",
        "title": "%search-filter.doFilter%",
        "icon": {
          "light": "images/filter_light.svg",
          "dark": "images/filter.svg"
        }
      },
      {
        "command": "searchFilter.inComments",
        "enablement": "editorLangId == search-result",
        "title": "%search-filter.inComments%",
        "icon": {
          "light": "images/commentLine_light.svg",
          "dark": "images/commentLine.svg"
        }
      },
      {
        "command": "searchFilter.notInComments",
        "enablement": "editorLangId == search-result",
        "title": "%search-filter.notInComments%",
        "icon": {
          "light": "images/code_light.svg",
          "dark": "images/code.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": " editorLangId == search-result && searchFilter.inComments == true",
          "command": "searchFilter.inComments",
          "group": "navigation@1"
        },
        {
          "when": "editorLangId == search-result  && searchFilter.inComments == false",
          "command": "searchFilter.notInComments",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
			"type": "object",
			"title": "Search Filter",
			"properties": {
        "searchFilter.inComments": {
					"type": "boolean",
					"default": false,
					"description": "%search-filter.inComments%"
				}
			}
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile-old": "tsc -p ./",
    "compile": "node ./esbuild.config.js",
    "build": "node ./esbuild.config.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "search",
    "Comments",
    "String",
    "filter"
  ],
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "gulp": "^4.0.2",
    "del": "^6.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "vscode-nls-dev": "^4.0.0",
    "esbuild": "^0.15.1",
    "fs-extra": "^10.0.1",
    "vscode-nls": "^5.0.0",
    "dayjs": "^1.7.4",
    "is-wsl": "^2.2.0"
  },
  "dependencies": {

  }
}
